{% extends 'base.twig' %}

{% block title %}
    Services | 2 Fil en Aiguilles
{% endblock %}

{% block css %}
    <link rel="stylesheet" href="css/visitor.css">
{% endblock %}

{% block main %}
<!-- Détail d'un cours -->
<div class="container-1 my-4">
    <div class="carddetail-1 mb-3">
        <div class="row g-0">
            <!-- Colonne pour l'image -->
            <div class="col-md-4">
                <img src="upload/{{ cours.image }}" class="img-fluid custom-imggg" alt="Image du cours">
            </div>
            <!-- Colonne pour le contenu -->
            <div class="col-md-8">
                <div class="carddetail-body-1">
                    <p class="badge text-medium">niveau {{ cours.niveau }}</p>
                    <h4 class="carddetail-title">{{ cours.nom }}</h4>
                    <p class="carddetail-text">{{ cours.description }}</p>
                    <!-- Bouton Télécharger placé après la description -->
                    <div class="text-center my-4">
                        <a class="btn btntelechager" data-bs-toggle="modal" data-bs-target="#downloadModal">
                            <i class="bi bi-download"></i> Télécharger le cours
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmation -->
<div class="modal fade" id="downloadModal" tabindex="-1" aria-labelledby="downloadModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="downloadModalLabel">Téléchargement réussi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body text-center">
                ✅ Le cours a été téléchargé avec succès
            </div>
            <div class="modal-footer justify-content-center">
                <a href="visiteur.php?page=visit_cours" class="btn btnretour">
                    Voir les cours
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Section des articles associés -->
<div class="container2 my-4">
    <h3 class="mb-4">Articles associés</h3>
    <div class="row g-3 justify-content-start">
        {% for article in liste_articles %}
            <div class="col-md-4">
                <div class="bloc-card">
                    <div class="bloc-card-body">
                        <img src="upload/{{ article.image }}" class="bloc-image" alt="image de l'article">
                        <h4 class="bloc-title">{{ article.titre }}</h4>
                        <h5 class="bloc-subtitle">{{ article.redacteur}}</h5>
                        <p class="bloc-text">{{ article.accroche}}</p>
                    </div>
                </div>
            </div>
        {% else %}
            <p>Aucune information présente</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
