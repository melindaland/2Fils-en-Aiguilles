{% extends 'admin.twig' %}

{% block main %}
<h1 class="mt-3">Gestion de tous les cours</h1>
<div class="row d-flex justify-content-center">
    <div class="col-md-6"> 
        <div class="row">
            {% for cours in liste_cours %}
                <div class="col-md-6 mb-2">
                    <div class="card-bloc">
                        <div class="col g-0">
                            <div class="row-md-4">
                                <img src="upload/{{ cours.image }}" class="img-fluid" alt="{{ cours.nom }}" style="width: 100%; height: 200px; object-fit: cover;">
                            </div>
                            <div class="row-md-8">
                                <div class="card-body bg-light">
                                    <p class="badge text-small">{{ cours.niveau }}</p>                  
                                    <h5 class="card-title"><strong>{{ cours.nom|slice(0, 10) ~ '...'}}</strong></h5>
                                    
                                    <div class="btn-group">
                                        <a href="admin.php?page=cours&action=read&id={{ cours.id }}" class="btn btn1">Détails</a>
                                        <a href="admin.php?page=cours&action=edit&id={{ cours.id }}" class="btn btn2">Modifier</a>
                                        <a href="admin.php?page=cours&action=delete&id={{ cours.id }}" class="btn btn3">Supprimer</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <p>Aucun cours présent</p>
            {% endfor %}
        </div>
    </div>

    <div class="col-md-3" style="margin-left: 200px;">
        <h2 class="mb-4 text-center">Ajouter un cours</h2>
        <div class="card-card bg-light">
                <h5 class="card-title">Niveau débutant</h5>
                <a href="admin.php?page=cours&action=new&niveau=debutant" class="btn btn4" style="font-size: 15px; margin-right: 5px;">
                <i class="bi bi-plus"></i> Ajouter</a>
        </div>
        <div class="card-card bg-light mt-3">
                <h5 class="card-title">Niveau intermédiaire</h5>
                <a href="admin.php?page=cours&action=new&niveau=intermediaire" class="btn btn4" style="font-size: 15px; margin-right: 5px;">
                <i class="bi bi-plus"></i> Ajouter</a>
        </div>
        <div class="card-card bg-light mt-3">
                <h5 class="card-title">Niveau avancé</h5>
                <a href="admin.php?page=cours&action=new&niveau=avance" class="btn btn4" style="font-size: 15px; margin-right: 5px;">
                <i class="bi bi-plus"></i> Ajouter</a>
        </div>
    </div>
</div>
{% endblock %}
